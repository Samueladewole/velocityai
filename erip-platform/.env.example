# ERIP Platform Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV="development"
DEBUG=true
API_BASE_URL="http://localhost:3001"

# Frontend Configuration  
VITE_API_BASE_URL="http://localhost:3001/api"
VITE_WS_URL="ws://localhost:3001"
VITE_PYTHON_BACKEND_URL="http://localhost:8001"

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/erip"
REDIS_URL="redis://localhost:6379"

# AI Model APIs
ANTHROPIC_API_KEY=""
OPENAI_API_KEY=""
HUGGINGFACE_API_KEY=""

# Python Backend
PYTHON_BACKEND_URL="http://localhost:8001"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key"

# AWS Configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_EVENT_BUS_NAME="erip-events"

# Trust Equity Configuration
TRUST_SCORE_CACHE_TTL=300
MAX_TRUST_ACTIVITIES_PER_DAY=100
SHAREABLE_URL_EXPIRY_DAYS=30

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL="INFO"
HEALTH_CHECK_INTERVAL=30000

# Monte Carlo Configuration
DEFAULT_MONTE_CARLO_ITERATIONS=10000
MAX_MONTE_CARLO_ITERATIONS=100000
PARALLEL_WORKERS=4

# Performance
REQUEST_TIMEOUT=300
MAX_CONCURRENT_REQUESTS=10
MODEL_CACHE_DIR="/tmp/erip_models"
MAX_MODEL_MEMORY=8

# File Upload Configuration
MAX_FILE_SIZE="50MB"
ALLOWED_FILE_TYPES="pdf,docx,xlsx,csv"

# Development Configuration
MOCK_EXTERNAL_SERVICES=true
ENABLE_DEBUG_ROUTES=true