# ERIP Platform Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV="development"
DEBUG=true
API_BASE_URL="http://localhost:3001"

# Frontend Configuration  
VITE_API_BASE_URL="http://localhost:3001/api"
VITE_WS_URL="ws://localhost:3001"
VITE_PYTHON_BACKEND_URL="http://localhost:8001"

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/erip"
REDIS_URL="redis://localhost:6379"

# AI Model APIs
ANTHROPIC_API_KEY=""
OPENAI_API_KEY=""
HUGGINGFACE_API_KEY=""

# Python Backend
PYTHON_BACKEND_URL="http://localhost:8001"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key"

# AWS Configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_EVENT_BUS_NAME="erip-events"

# Trust Equity Configuration
TRUST_SCORE_CACHE_TTL=300
MAX_TRUST_ACTIVITIES_PER_DAY=100
SHAREABLE_URL_EXPIRY_DAYS=30

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL="INFO"
HEALTH_CHECK_INTERVAL=30000

# Monte Carlo Configuration
DEFAULT_MONTE_CARLO_ITERATIONS=10000
MAX_MONTE_CARLO_ITERATIONS=100000
PARALLEL_WORKERS=4

# Performance
REQUEST_TIMEOUT=300
MAX_CONCURRENT_REQUESTS=10
MODEL_CACHE_DIR="/tmp/erip_models"
MAX_MODEL_MEMORY=8

# File Upload Configuration
MAX_FILE_SIZE="50MB"
ALLOWED_FILE_TYPES="pdf,docx,xlsx,csv"

# Development Configuration
MOCK_EXTERNAL_SERVICES=true
ENABLE_DEBUG_ROUTES=true

# =============================================================================
# PLATFORM INDEPENDENCE CONFIGURATION
# =============================================================================

# Platform mode determines which platform(s) are enabled and primary
# Options: erip-primary | velocity-primary | dual-platform | erip-only | velocity-only
VITE_PLATFORM_MODE=dual-platform

# Main domain redirect behavior
VITE_REDIRECT_MAIN_DOMAIN=false

# Show cross-platform links and navigation
VITE_SHOW_CROSS_PLATFORM_LINKS=true

# Enable feature migration between platforms
VITE_ENABLE_FEATURE_MIGRATION=false

# Allow platform switching via UI
VITE_ALLOW_PLATFORM_SWITCHING=true

# =============================================================================
# ERIP PLATFORM FEATURES
# =============================================================================

# Core ERIP Tools (default: enabled)
VITE_ERIP_PRISM=true
VITE_ERIP_COMPASS=true
VITE_ERIP_ATLAS=true
VITE_ERIP_BEACON=true
VITE_ERIP_CLEARANCE=true
VITE_ERIP_CIPHER=true
VITE_ERIP_NEXUS=true
VITE_ERIP_PULSE=true

# ERIP-specific Features
VITE_ERIP_QIE=true
VITE_ERIP_SHEETS=true
VITE_ERIP_TRUST_CENTER=true

# ERIP Business Features
VITE_ERIP_ENTERPRISE_SALES=true
VITE_ERIP_MARKETPLACE=true
VITE_ERIP_EXPERT_NETWORK=true

# =============================================================================
# VELOCITY PLATFORM FEATURES
# =============================================================================

# Core Velocity Features (default: enabled)
VITE_VELOCITY_AI_AGENTS=true
VITE_VELOCITY_LIVE_MONITORING=true
VITE_VELOCITY_AUTO_EVIDENCE=true
VITE_VELOCITY_CLOUD_INTEGRATIONS=true

# Velocity-specific Tools
VITE_VELOCITY_CUSTOM_AGENTS=true
VITE_VELOCITY_CANVAS_DESIGN=false
VITE_VELOCITY_COMPLIANCE_FLOWS=true

# Velocity Business Features
VITE_VELOCITY_RAPID_ONBOARDING=true
VITE_VELOCITY_SUBSCRIPTION_TIERS=true

# =============================================================================
# SHARED FEATURES
# =============================================================================

# Features available to both platforms
VITE_SHARED_TRUST_SCORING=true
VITE_SHARED_COMPLIANCE_FRAMEWORKS=true
VITE_SHARED_EVIDENCE_MANAGEMENT=true
VITE_SHARED_REPORTING=true
VITE_SHARED_ANALYTICS=true

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================

# Force a specific platform in development
# VITE_FORCE_PLATFORM=velocity

# Disable domain redirects in development
VITE_DISABLE_REDIRECTS=true

# Show platform switcher component in development
VITE_SHOW_PLATFORM_SWITCHER=true

# Enable all features regardless of platform
# VITE_ENABLE_ALL_FEATURES=true

# =============================================================================
# DEPLOYMENT EXAMPLES
# =============================================================================

# Example 1: Velocity-only deployment (velocity.eripapp.com)
# VITE_PLATFORM_MODE=velocity-only
# VITE_REDIRECT_MAIN_DOMAIN=true
# VITE_VELOCITY_AI_AGENTS=true
# VITE_VELOCITY_LIVE_MONITORING=true
# VITE_VELOCITY_AUTO_EVIDENCE=true
# # Disable all ERIP features
# VITE_ERIP_PRISM=false
# VITE_ERIP_COMPASS=false
# # etc...

# Example 2: ERIP-only deployment (app.eripapp.com)
# VITE_PLATFORM_MODE=erip-only
# VITE_REDIRECT_MAIN_DOMAIN=true
# VITE_ERIP_PRISM=true
# VITE_ERIP_COMPASS=true
# # Disable all Velocity features
# VITE_VELOCITY_AI_AGENTS=false
# VITE_VELOCITY_LIVE_MONITORING=false
# # etc...

# Example 3: Development with both platforms
# VITE_PLATFORM_MODE=dual-platform
# VITE_DISABLE_REDIRECTS=true
# VITE_SHOW_PLATFORM_SWITCHER=true
# VITE_ALLOW_PLATFORM_SWITCHING=true